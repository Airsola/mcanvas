{
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "rules": {
        "semi": [2, "never"],
        "quotes": [2, "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
        "comma-dangle": [2, "always-multiline"],
        "no-console": [0, { "allow": ["warn", "error"] }],
        "no-multiple-empty-lines": [2, { "max": 1 }],
        "eqeqeq": 2,
        "comma-spacing": 2,
        "space-infix-ops": 2
    },
    "globals": {
        "$": true
    }
}
